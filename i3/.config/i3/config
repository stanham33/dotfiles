## New mode for switching monitor modes
set $monitorMode "monitor s=single, w=work, h=home"
bindsym $mod+Shift+m mode $monitorMode
mode $monitorMode {
  bindsym s exec "~/.config/i3/screenlayout/single", mode "default"
  bindsym w exec "~/.config/i3/screenlayout/gosecure", mode "default"
  bindsym h exec "~/.config/i3/screenlayout/home", mode "default"

  #back to normal: Enter or Escape
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
